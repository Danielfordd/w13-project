<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous")
        link(rel="stylesheet" href="/public/css/bookpage.css")
        link(rel="stylesheet" href="/public/css/nav-bar.css")
        title Document
    body
    include nav-bar
    div.pure-g.bookdisplay
        div.pure-u-1
            div.pure-u-1-2
                div.bookCover
                    img(src=`/public/images/${book.cover}`, alt=`${book.title}`).pure-u-1
            div.pure-u-1-2
                div.top
                    span.pure-u-1= book.title
                div.top
                    span.pure-u-1-2 Published:
                    span.pure-u-1-2= book.published
                div.top
                    span.pure-u-1 Summary
                div.top
                    span.pure-u-1= book.summary
                div.top
                    span.pure-u-1-3 Author:
                    span.pure-u-1-3= author[0].Author.firstName
                    span.pure-u-1-3= author[0].Author.lastName
        each r in review
            div.pure-u-1
                div.review
                    span.pure-u-2-8 Review
                    span.pure-u-3-8
                    span.pure-u-2-8 Rating:
                    span.pure-u-1-8=`  ${r.rating}`
                div.review
                    span.pure-u-1= r.review
